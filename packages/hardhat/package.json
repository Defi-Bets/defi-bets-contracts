{
    "name": "@se-2/hardhat",
    "version": "0.0.1",
    "scripts": {
        "account": "hardhat run scripts/listAccount.ts",
        "chain": "hardhat node --network hardhat --no-deploy",
        "compile": "hardhat compile",
        "deploy": "hardhat deploy --export-all ./temp/hardhat_contracts.json --tags token \"$@\" && hardhat deploy --export-all  ./temp/hardhat_contracts.json --tags oracle \"$@\" && hardhat deploy --export-all  ./temp/hardhat_contracts.json --tags core \"$@\" && hardhat run scripts/generateTsAbis.ts",
        "deploy-oracle": "hardhat deploy --export-all ./temp/hardhat_contracts.json --tags oracle \"$@\" && hardhat run scripts/generateTsAbis.ts",
        "deploy-core": "hardhat deploy --export-all ./temp/hardhat_contracts.json --tags core \"$@\" && hardhat run scripts/generateTsAbis.ts",
        "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
        "generate": "hardhat run scripts/generateAccount.ts",
        "setup": "hardhat run scripts/defi-bets/setupBetContract.ts",
        "coverage": "hardhat coverage --network hardhat",
        "provide-lp": "hardhat mint-fDUSD --amount 100000 \"$@\" && hardhat provide-lp --amount 100000 ",
        "lint": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
        "lint-staged": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore",
        "test": "REPORT_GAS=true hardhat test --network hardhat",
        "test-staging": "hardhat deploy --export-all ./temp/hardhat_contracts.json --tags token --network localhost \"$@\" && hardhat deploy --export-all ./temp/hardhat_contracts.json --network localhost \"$@\" && hardhat run scripts/generateTsAbis.ts --network localhost \"$@\" && hardhat test --grep \"DefiBets Protocol Staging Test\"  --network localhost",
        "verify": "hardhat etherscan-verify",
        "protocol-update": "hardhat run scripts/defi-bets/readDefiBetsInfo.ts ",
        "show-bets": "hardhat run scripts/defi-bets/showAllBets.ts ",
        "jump": "hardhat jump"
    },
    "devDependencies": {
        "@ethersproject/abi": "^5.7.0",
        "@ethersproject/providers": "^5.7.1",
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
        "@nomicfoundation/hardhat-toolbox": "^2.0.2",
        "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
        "@nomiclabs/hardhat-etherscan": "^3.1.0",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.3",
        "@types/chai": "^4.3.5",
        "@types/chai-as-promised": "^7.1.5",
        "@types/eslint": "^8",
        "@types/mocha": "^9.1.1",
        "@types/prettier": "^2",
        "@types/qrcode": "^1",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "chai": "^4.3.6",
        "chai-ethers": "^0.0.1",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "ethers": "^5.7.1",
        "hardhat": "^2.11.2",
        "hardhat-chai-matchers": "^0.0.1",
        "hardhat-deploy": "^0.11.25",
        "hardhat-gas-reporter": "^1.0.9",
        "mocha-skip-if": "^0.0.3",
        "prettier": "^2.8.4",
        "solidity-coverage": "^0.8.2",
        "ts-node": "^10.9.1",
        "typechain": "^8.1.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@chainlink/contracts": "^0.6.1",
        "@openzeppelin/contracts": "^4.8.1",
        "axios": "^1.4.0",
        "dotenv": "^16.0.3",
        "envfile": "^6.18.0",
        "node-fetch": "^3.3.1",
        "qrcode": "^1.5.1"
    }
}
